{
  "rulesPredicate": "Any",
  "rules": [
    {
      "conditionsPredicate": "All",
      "conditions": [
        { "field": "From", "predicate": "contains", "value": "recommendations@discover.pinterest.com" },
        { "field": "Subject", "predicate": "contains", "value": "your taste is next level" }
      ],
      "actions": [{ "type": "mark_as_unread" }]
    },
    {
      "conditionsPredicate": "All",
      "conditions": [
        { "field": "labels", "predicate": "contains", "value": "CATEGORY_PROMOTIONS" }
      ],
      "actions": [
        { "type": "move_to_label", "label": "PromotionsFiltered" }
      ]
    }
  ]
}
